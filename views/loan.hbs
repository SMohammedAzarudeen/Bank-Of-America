  <script>
    // Check if jsPDF is loaded
    document.addEventListener('DOMContentLoaded', function() {
      if (typeof window.jspdf === 'undefined') {
        console.error('jsPDF library not loaded properly');
        const downloadBtn = document.getElementById('downloadReportBtn');
        if (downloadBtn) {
          downloadBtn.disabled = true;
          downloadBtn.classList.add('bg-gray-400');
          downloadBtn.classList.remove('bg-green-600', 'hover:bg-green-700');
          downloadBtn.title = 'PDF library not available';
        }
      } else {
        console.log('jsPDF library loaded successfully');
      }
    });

    // Handle form submission
    document.getElementById('loanForm').addEventListener('submit', function(event) {
      event.preventDefault();
      
      const messageContainer = document.getElementById('messageContainer');
      messageContainer.classList.remove('hidden');
      messageContainer.innerHTML = '<p class="success-message flex items-center justify-center"><span class="mr-2">âœ…</span> Loan application submitted successfully!</p>';
      
      // Scroll to the message
      messageContainer.scrollIntoView({ behavior: 'smooth' });
    });

    function navigateTo(page) {
      const main = document.getElementById('main');
      const hero = document.getElementById('hero');

      main.classList.add('fade-out');
      hero.classList.add('fade-out');

      setTimeout(() => {
        window.location.href = `/${page}`;
      }, 400);
    }

    function showMessage(message, isError = false) {
      const messageContainer = document.getElementById('messageContainer');
      messageContainer.classList.remove('hidden');
      
      const messageClass = isError ? 'error-message' : 'success-message';
      const icon = isError ? 'âš ï¸' : 'âœ…';
      
      messageContainer.innerHTML = `<p class="${messageClass} flex items-center justify-center"><span class="mr-2">${icon}</span> ${message}</p>`;
      
      // Scroll to the message
      messageContainer.scrollIntoView({ behavior: 'smooth' });
    }

    async function downloadLoanReport() {
      try {
        // Validate form fields first
        const requiredFields = ['name', 'accnum', 'ifsc', 'email', 'phno', 'loanoption', 'loanamount'];
        let missingFields = [];
        
        for (const field of requiredFields) {
          const el = document.getElementById(field);
          if (!el || !el.value.trim()) {
            missingFields.push(field);
          }
        }
        
        if (missingFields.length > 0) {
          showMessage(`Please fill in all required fields before downloading the report: ${missingFields.join(', ')}`, true);
          return;
        }
        
        // Check if jsPDF is loaded
        if (typeof window.jspdf === 'undefined') {
          showMessage('PDF library not loaded. Please refresh the page and try again.', true);
          return;
        }
        
        const { jsPDF } = window.jspdf;
        
        // Get current form values with better handling
        const getValue = (id) => {
          const el = document.getElementById(id);
          return (el && el.value.trim()) ? el.value.trim() : '-';
        };

        const formData = {
          name: getValue('name'),
          accnum: getValue('accnum'),
          ifsc: getValue('ifsc'),
          email: getValue('email'),
          phno: getValue('phno'),
          loanoption: getValue('loanoption'),
          loanamount: getValue('loanamount')
        };
        
        // Debug log to verify data is being collected
        console.log("Form data:", formData);
        
        // Create PDF
        const doc = new jsPDF();
        
        // Current date and reference
        const date = new Date();
        const dateStr = date.toLocaleDateString();
        const timeStr = date.toLocaleTimeString();
        const referenceId = "LOAN-" + Math.floor(Math.random() * 90000 + 10000);

        // --------- HEADER ---------
        doc.setFont("helvetica", "bold");
        doc.setFontSize(18);
        doc.setTextColor(0, 0, 128);
        doc.text("BANK OF AMERICA", 105, 20, null, null, "center");

        doc.setFont("helvetica", "normal");
        doc.setFontSize(14);
        doc.text("LOAN REPORT", 105, 28, null, null, "center");

        doc.setFontSize(10);
        doc.setTextColor(80);
        doc.text(`Date: ${dateStr}`, 20, 38);
        doc.text(`Time: ${timeStr}`, 20, 43);
        doc.text(`Reference: ${referenceId}`, 20, 48);

        doc.setDrawColor(0, 102, 204);
        doc.setLineWidth(0.5);
        doc.line(20, 52, 190, 52);

        // --------- CUSTOMER INFO ---------
        doc.setFont("helvetica", "bold");
        doc.setFontSize(12);
        doc.setTextColor(33, 37, 41);
        doc.text("Customer Information", 20, 65);

        doc.setFont("helvetica", "normal");
        doc.setFontSize(11);
        doc.setTextColor(0);

        let yPos = 73;
        const spacing = 7;

        // Customer details table
        const customerInfo = [
          ["Account Holder:", formData.name],
          ["Account Number:", formData.accnum],
          ["IFSC Code:", formData.ifsc],
          ["Email Address:", formData.email],
          ["Phone Number:", formData.phno]
        ];

        customerInfo.forEach(([label, value]) => {
          doc.text(label, 25, yPos);
          doc.text(value, 80, yPos);
          yPos += spacing;
        });

        // --------- LOAN INFO ---------
        yPos += spacing; // Add extra space before loan section
        doc.setFont("helvetica", "bold");
        doc.setFontSize(12);
        doc.text("Loan Information", 20, yPos);
        yPos += spacing;

        doc.setFont("helvetica", "normal");
        doc.setFontSize(11);

        // Loan details table
        const loanInfo = [
          ["Loan Type:", formData.loanoption],
          ["Loan Amount:", `â‚¹${formData.loanamount}`]
        ];

        loanInfo.forEach(([label, value]) => {
          doc.text(label, 25, yPos);
          doc.text(value, 80, yPos);
          yPos += spacing;
        });

        // --------- FOOTER ---------
        doc.setFontSize(10);
        doc.setTextColor(100);
        doc.text("Thank you for choosing Bank of America.", 105, 275, null, null, "center");

        // Save with dynamic filename
        const fileName = `${referenceId}_${formData.name.replace(/\s+/g, '_')}_LoanReport.pdf`;
        doc.save(fileName);
        
        showMessage('Loan report downloaded successfully!');

      } catch (error) {
        console.error("Error generating PDF:", error);
        showMessage(`Failed to generate PDF: ${error.message}`, true);
      }
    }
  </script>
